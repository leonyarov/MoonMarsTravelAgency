<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Moon Mars Travel Agency</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm fixed-top">
        <div class="container-fluid ">
            @Html.ActionLink("🚀", "Index", "Home", null,new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    @if (Session["Admin"] != null)
                    {
                        <li class="nav-item">@Html.ActionLink("Users", "Index", "Users", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Flight Schedules", "Index", "Schedules", null, new { @class = "nav-link" })</li>

                    }
                </ul>

                @if (Session["ID"] != null)
                {
                    <button class="nav-item bg-black">@Html.ActionLink(Session["Username"].ToString(), "Details", "Users", new { id = Session["ID"].ToString() }, new { @class = "nav-link" })</button>
                    <button class="align-self-end btn btn-success me-2">@Html.ActionLink("Log out", "Logout", "Authentication", new { id = Session["ID"].ToString() }, new { @class = "nav-link" })</button>


                }
                else
                {
                    <button class="align-self-end btn btn-success me-2">@Html.ActionLink("Sign In", "Index", "Authentication", null, new { @class = "nav-link" })</button>

                }



            </div>
        </div>
    </nav>


    <!--TOP BAR-->
    <div class="container body-content">
        @RenderBody()
        <hr />

        <!--Footer-->
        <footer>
            <p><a onclick="party()" class="party">&copy;</a> @DateTime.Now.Year Leon &amp; Dori</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

<script>
    var state = false;
    function party() {
        if (!state) {
            $("body").css({
                "animation": "fun 1s infinite"
            })
            state = true;
        }
        else {
            $("body").css({
                "animation": ""
            })
            state = false;
        }
    }
</script>
</html>
