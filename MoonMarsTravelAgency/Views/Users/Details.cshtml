@model MoonMarsTravelAgency.Models.Users

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Last_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Last_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

    </dl>
    <hr />
    <h4>Tickets</h4>
            @if (ViewBag.tickets == null)
            {
                <h4 class="bg-warning">NO TICKETS FOUND</h4>
            }
            else
            {
        <table class="table">
        <thead>
            <tr class="bg-gradient">
                <th>
                    Flight ID
                </th>
                <th>
                    Seat ID
                </th>
            </tr>
        </thead>

        @foreach (MoonMarsTravelAgency.Models.Tickets item in ViewBag.tickets)
        {
            <tr>
                <td class="">
                    @item.Flight_ID
                </td>
                <td class="">
                    @item.Seat_ID
                </td>
            </tr>
        }
    </table>
            }
</div>
@if (Session["Admin"] != null)
{
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
}
